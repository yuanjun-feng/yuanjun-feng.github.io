<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign presentations = data[1] | sort: 'year' | reverse %}
  {% for content in presentations %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.year %}
            <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">{{ content.year }}</span>
          {% endif %}
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {{ content.title }}
          </h6>
          {% if content.location %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">
              <i class="fa-solid fa-location-dot iconlocation"></i>
              {{ content.location }}
            </h6>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>

