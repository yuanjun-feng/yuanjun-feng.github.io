<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign teaching = data[1] | sort: 'startDate' | reverse %}
  {% for content in teaching %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.startDate %}
            {% assign startDate = content.startDate | split: '-' | slice: 0, 1 | join: '.' %}
            {% if content.endDate %}
              {% assign endDate = content.endDate | split: '-' | slice: 0, 1 | join: '.' %}
            {% else %}
              {% assign endDate = 'Present' %}
            {% endif %}
            {% assign date = startDate | append: ' - ' %}
            {% assign date = date | append: endDate %}
          {% elsif content.notes %}
            {% assign date = content.notes %}
          {% else %}
            {% assign date = '' %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  {% if date %}
                    <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px"> {{ date }} </span>
                  {% endif %}
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {{ content.course }}
            {% if content.level %}
              <span class="badge badge-secondary ml-2">{{ content.level }}</span>
            {% endif %}
          </h6>
          {% if content.institution %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.institution }}</h6>
          {% endif %}
          {% if content.role %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.role }}</h6>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>

